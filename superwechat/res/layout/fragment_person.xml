<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@color/orange"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/iv_person_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_avatar"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_person_avatar"
                android:text="往事随风"
                android:textSize="22sp"
                android:textColor="@color/bd_wallet_fp_text_white"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/iv_person_qrcode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/tb_icon_home_qrcode_gray"
                android:layout_toRightOf="@id/tv_person_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_person_tomsg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/tb_icon_more_msg_white_56"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_person_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_person_tomsg"
                android:text="@string/setting"
                android:textSize="22sp"
                android:textColor="@color/bd_wallet_fp_text_white"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@color/ebpay_text_orange">
                <RelativeLayout
                    android:id="@+id/layout_person_collect_goods"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_person_good_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="16sp"
                        android:textColor="@color/bd_wallet_fp_text_white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/tv_person_good_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="收藏的宝贝"
                        android:textSize="16sp"
                        android:textColor="@color/bd_wallet_fp_text_white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"/>
                <RelativeLayout
                    android:id="@+id/layout_person_collect_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_person_shop_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="16sp"
                        android:textColor="@color/bd_wallet_fp_text_white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/tv_person_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="收藏的店铺"
                        android:textSize="16sp"
                        android:textColor="@color/bd_wallet_fp_text_white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"/>

                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"/>
                <RelativeLayout
                    android:id="@+id/layout_person_myfoot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_person_myfoot_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="68"
                        android:textSize="16sp"
                        android:textColor="@color/bd_wallet_fp_text_white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/tv_person_myfoot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="我的足迹"
                        android:textSize="16sp"
                        android:textColor="@color/bd_wallet_fp_text_white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layout_person_my_goods"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/bd_wallet_white"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textSize="24sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_person_my_goods_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_person_my_goods_right"
                    android:layout_centerVertical="true"
                    android:text="查看全部已购宝贝"
                    android:textColor="@color/gray_normal"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp">
                    <Button
                        android:id="@+id/btn_person_wait_pay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/order_list1"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp">
                    <Button
                        android:id="@+id/btn_person_wait_send"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/order_list2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp">
                    <Button
                        android:id="@+id/btn_person_wait_receive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/order_list3"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp">
                    <Button
                        android:id="@+id/btn_person_wait_evaluate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/order_list4"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp">
                    <Button
                        android:id="@+id/btn_person_after_sale"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/order_list5"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layout_person_my_card"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/bd_wallet_white"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的卡卷包"
                    android:textSize="24sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_person_life"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/bd_wallet_white"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/iv_life_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/center_card_coupon1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_life_pic"
                    android:text="生活卷"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_person_net_shop"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/bd_wallet_white"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/iv_net_shop_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/center_card_coupon2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_net_shop_pic"
                    android:text="网店卷"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_person_net_shop_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_person_net_shop_right"
                    android:layout_centerVertical="true"
                    android:text="暂无可用优惠卷"
                    android:textColor="@color/gray_normal"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_person_vip_card"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/bd_wallet_white"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/iv_vip_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/center_card_coupon3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_vip_pic"
                    android:text="会员卡"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_person_vip_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_person_vip_right"
                    android:layout_centerVertical="true"
                    android:text="一卡在手，逛店无忧"
                    android:textColor="@color/gray_normal"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_person_my_vip"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/bd_wallet_white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的专享特权"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_person_my_vip_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_person_my_vip_right"
                    android:layout_centerVertical="true"
                    android:text="领金币，看优惠"
                    android:textColor="@color/gray_normal"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
